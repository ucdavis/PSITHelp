@model ITHelp.Models.WorkOrders


<h1>Create New Work Order</h1>
<hr />
<div class="row">
    
    <div class="col-sm-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row required">
                <label asp-for="Title" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Title" class="form-control">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>            
            <div class="form-group row required">
                <label asp-for="FullText" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <textarea class="form-control" style="height: 200px;" asp-for="FullText"></textarea>
					<span asp-validation-for="FullText" class="text-danger"></span>
                </div>                
            </div>            
            <div class="form-group row">
                <label asp-for="Phone" class="col-sm-3 control-label"></label>
                <div class="col-sm-3">
					<input asp-for="Phone" class="form-control" />
					<span asp-validation-for="Phone" class="text-danger"></span>
                </div>                
            </div>
            <div class="form-group row">
                <label asp-for="Room" class="col-sm-3 control-label"></label>
                <div class="col-sm-3">
                    <input asp-for="Room" class="form-control" />
                    <span asp-validation-for="Room" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Building" class="control-label"></label>
                <input asp-for="Building" class="form-control" />
                <span asp-validation-for="Building" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ComputerTag" class="col-sm-3 control-label"></label>
                <div class="col-sm-4">
					<input asp-for="ComputerTag" class="col-sm-4 form-control" />
					<span asp-validation-for="ComputerTag" class="text-danger"></span>
                </div>                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> | 
                <a asp-action="index" asp-controller="Home" class="btn btn-dark">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
