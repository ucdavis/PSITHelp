<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITHelp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITHelp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="navbar " style="background-image: linear-gradient(white, #cce6ff)">
            <div class="col-sm-12 col-md-7"><img src="~/images/pslogo.png" /></div>
            <div class="col-sm-12 col-md-5 text-success">IT Helpline: (530) 754-7510<br />
                Email: <a href="mailto:ithelp@plantsciences.ucdavis.edu">ithelp@plantsciences.ucdavis.edu</a>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            
                       
            <div class="container-fluid">  
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">IT Help</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="https://plsdeptresources.ucdavis.edu/computer-supportinformation-technology-it-services">IT Home</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="WorkOrders" asp-action="NewTicket">Submit New Issue</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="WorkOrders" asp-action="Index">My Issues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Users" asp-action="New">New User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Staff" asp-action="Index">Staff Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Management" asp-action="Index">Management Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ITHelp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
