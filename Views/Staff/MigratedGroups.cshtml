@model List<ITHelp.Models.MigratedGroups>

<div class="row">    
    <div class="col-sm-12">
        <form asp-action="NewGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label for="firstName" class="col-sm-3 col-form-label">First Name</label>
                <div class="col-sm-3">
                    <input id="firstName" name="firstName" class="col-form" />
                </div>
            </div>
			<div class="form-group row">
				<label for="lastName" class="col-sm-3 col-form-label">Last Name</label>
				<div class="col-sm-3">
					<input id="lastName" name="lastName" class="col-form" />
				</div>
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary" value="Create New Entry" />
			</div>
		</form>
	</div>
</div>
<div><hr /></div>
<div>
	<table class="table table-striped datatable">
		<thead>
			<tr>
				<th></th>
				<th>First Name</th>
				<th>Last Name</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var row in Model)
			{
				<tr>
					<td><a asp-action="EditGroup" asp-route-id="@row.Id" class="btn btn-info">Edit</a></td>
					<td>@row.FirstName</td>
					<td>@row.LastName</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" />

	<script>
		$(document).ready(function () {
			$('.datatable').DataTable({
				dom: 'lfrtip',
				pageLength: 100,
				order: [[2, 'asc']]
			});
		});

	</script>
}
