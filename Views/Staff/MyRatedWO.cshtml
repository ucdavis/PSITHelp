@model List<ITHelp.Models.WorkOrders>
@{
    Layout = "_LayoutWide";
}
<h1>My Rated Work Orders</h1>

<table class="table datatable table-striped" style="width: 100%">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Full Text</th>
            <th>Date</th>
            <th>Requestor</th>            
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td><a asp-action="details" asp-route-id="@item.Id">@item.Id</a></td>
                <td>@item.Title</td>
                <td>@item.FullText</td>
                @if (item.RequestDate.HasValue)
                {
                    <td data-sort="@item.RequestDate.Value.ToFileTimeUtc()">@item.RequestDate.Value.ToShortDateString()</td>
                }
                else
                {
                    <td></td>
                }
                <td>@item.RequestorValue</td>
                <td>@item.Rating</td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {

    <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" />

    <script>
        $(document).ready(function () {
            $('.datatable').DataTable({
                dom: 'lfrtip',
                pageLength: 100,
                columnDefs: [
                    {
                        targets: [1],
                        width: "45%",
                    },
                    {
                        targets: [2],
                        searchable: true,
                        visible: false
                    },
                ],
                order: [[3, 'desc']]
            });           
        });

    </script>




}

