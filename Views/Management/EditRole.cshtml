@model ITHelp.Models.Employee


<form asp-action="EditRole">
	<input type="hidden" asp-for="@Model.Id" />
	<div>
		<h3>Update to:</h3>		
		<div class="form-group row">
			<label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
			<div class="col-sm-3">
				<input asp-for="FirstName" readonly class="form-control-plaintext" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="LastName" class="col-sm-3 col-form-label"></label>
			<div class="col-sm-3">
				<input asp-for="LastName" readonly class="form-control-plaintext" />
			</div>
		</div>		
		<div class="form-group row">
			<label asp-for="Role" class="col-sm-3 col-form-label"></label>
			<div class="col-sm-2">
				<select asp-for="Role" class="form-select form-select-sm">
					<option>none</option>
					<option>student</option>
					<option>tech</option>
				</select>
			</div>
		</div>
		<div>
			<input type="submit" class="btn btn-primary" value="Update" /> |
			<a asp-action="Roles" class="btn btn-dark">Cancel</a>
		</div>
	</div>
</form>

@await Html.PartialAsync("_Roles")
